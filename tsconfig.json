{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "paths": {
      "@store/*": ["store/*"],
      "@booking/*": ["booking/*"],
      "@forum/*": ["forum/*"],
      "@todo/*": ["todo/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "pg"]
  },
  "include": ["src/**/*.ts", "src/global.d.ts"],
  "exclude": ["node_modules", "dist"]
}